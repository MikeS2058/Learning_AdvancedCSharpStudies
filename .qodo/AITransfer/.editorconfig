# Root EditorConfig for C# / .NET projects
# Customize these settings based on team preferences and project requirements
root = true

[*.cs]
# Do not qualify member access with 'this.' unless necessary
# These control 'this.' on fields, properties, methods, and events
# Values: true=prefer qualification, false=prefer no qualification
# Severities: silent, suggestion, warning, error

# Prefer no 'this.' qualifiers
dotnet_style_qualification_for_field = false:warning
dotnet_style_qualification_for_property = false:warning
dotnet_style_qualification_for_method = false:warning
dotnet_style_qualification_for_event = false:warning

# Prefer simplified names (remove redundant namespace qualifiers when in scope)
# Enforce via IDE diagnostics
dotnet_diagnostic.IDE0001.severity = warning # Name can be simplified
dotnet_diagnostic.IDE0002.severity = warning # Simplify member access

# Prefer predefined types where appropriate (int instead of System.Int32, etc.)
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

# Enable style analyzers broadly
# Treat all style suggestions at least as suggestions to allow formatters to act
dotnet_analyzer_diagnostic.category-Style.severity = suggestion

# Enforce one type per file (classes, interfaces, records, structs, enums)
dotnet_diagnostic.IDE0040.severity = warning # Move type to file

# Use primary constructors where possible
dotnet_diagnostic.IDE0100.severity = warning # Use primary constructor

# C# specific style helpers (non-blocking but helpful)
csharp_prefer_simple_using_statement = true:suggestion
csharp_style_namespace_declarations = file_scoped:suggestion
csharp_style_var_for_built_in_types = false:silent
csharp_style_var_when_type_is_apparent = false:silent
csharp_style_var_elsewhere = false:silent

# Formatting consistency
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = false